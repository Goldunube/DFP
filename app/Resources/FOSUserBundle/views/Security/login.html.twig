{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <p>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Login"/>
    </p>

    <p>
        <input type="password" id="password" name="_password" required="required" placeholder="HasÅ‚o"/>
    </p>

    <p>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label id="remember-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </p>

    <input class="buttons" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>