{% extends '@GCSVCore/Frontend/frontend_layout.html.twig' %}

{% block content -%}
    <section class="container-fluid">
        <h1>{% trans %}Moje raporty{% endtrans %}</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Klient</th>
                    <th>Zdarzenie</th>
                    <th>Rodzaj</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for raport in raporty %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>
                            {% if raport.zdarzenieTechniczne.oddzialFirmy %}
                                {{ raport.zdarzenieTechniczne.oddzialFirmy.nazwaSkrocona }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>{{ raport.zdarzenieTechniczne.opis|truncate(60) }}</td>
                        <td>{{ raport.zdarzenieTechniczne.rodzajZdarzeniaTechnicznego.nazwa }}</td>
                        <td></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

