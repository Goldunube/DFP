{% extends '@DFPEtapI/Backend/index.html.twig' %}

{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/main_2.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/layout_2.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/custom-theme/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet" />
{% endblock stylesheets %}

{% block javascript %}
    {{ parent() }}
    {% javascripts '@DFPEtapIBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascript %}

{% block content -%}
    {{ form_start(edit_form) }}
    <section class="container-fluid">
        <h1>{% trans %}Rodzaj zdarzenia technicznego - Edycja{% endtrans %}</h1>
        <fieldset>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(edit_form.nazwa) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(edit_form.opis) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(edit_form.showOthers) }}
                </div>
            </div>
        </fieldset>

        <hr>
        <a href="{{ path('backend_rodzaje_zdarzen_technicznych') }}" class="btn btn-warning">{% trans %}Powr√≥t{% endtrans %}</a>
        {{ form_widget(edit_form.submit) }}
    </section>
    {{ form_end(edit_form) }}
{% endblock %}

{% block javascripts %}
    $('[data-toggle="tooltip"]').tooltip();
    $('.oddzialy-collection').collectionManager();
{% endblock javascripts %}
