{% extends '@DFPEtapI/Backend/index.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/main_2.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/layout_2.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/custom-theme/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet" />
{% endblock stylesheets %}

{% block javascript %}
    {{ parent() }}
    {% javascripts '@DFPEtapIBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascript %}

{% block content -%}
    <section class="container-fluid">
        <h1>Rodzaj wizyty technicznej - {{ entity.nazwa }}</h1>

        <div class="row">
            <div class="col-sm-12 form-horizontal">
                <div class="form-group">
                    <label class="col-md-3 control-label">Id</label>
                    <div class="col-md-9"><p class="form-control-static">{{ entity.id }}</p></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 form-horizontal">
                <div class="form-group">
                    <label class="col-md-3 control-label">Nazwa</label>
                    <div class="col-md-9"><p class="form-control-static">{{ entity.nazwa }}</p></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 form-horizontal">
                <div class="form-group">
                    <label class="col-md-3 control-label">Opis</label>
                    <div class="col-md-9"><p class="form-control-static">{{ entity.opis }}</p></div>
                </div>
            </div>
        </div>
    </section>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                {{ form_start(delete_form) }}
                <a href="{{ path('backend_rodzaje_zdarzen_technicznych') }}" class="btn btn-warning" role="button">{% trans %}Powr√≥t{% endtrans %}</a>
                <a href="{{ path('backend_rodzaj_zdarzenia_technicznego_edit', { 'id': entity.id }) }}" class="btn btn-primary">{% trans %}Edytuj{% endtrans %}</a>
                {{ form_widget(delete_form.submit, { 'attr' : { 'class' : 'btn btn-danger' } } ) }}
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>

{% endblock %}
