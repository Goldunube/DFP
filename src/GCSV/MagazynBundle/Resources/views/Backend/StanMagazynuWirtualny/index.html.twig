{% extends '@GCSVCore/Backend/backend_layout.html.twig' %}

{% block content -%}
    <div class="page-header">
        <h1>Lista magazynów użytkowników</h1>
    </div>
    <section class="content-fluid">
        <table class="table table-striped table-hovered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Użytkownik</th>
                    <th class="text-right">Symbol magazynu</th>
                </tr>
            </thead>
            <tbody data-link="row" class="rowlink">
                {% for magazyn in uzytkownicyMagazyny %}
                    <tr>
                        <td><a href="{{ path('zaplecze_stan_magazynu_wirtualnego_show', { 'uzytkownik' : magazyn.uzytkownik.id }) }}">{{ loop.index }}</a></td>
                        <td>{{ magazyn.uzytkownik.imieNazwisko }}</td>
                        <td class="text-right">{{ magazyn.symbol }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock content -%}