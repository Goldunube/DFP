{% extends '@GCSVCore/Backend/backend_layout.html.twig' %}

{% block content -%}
    <section class="container-fluid">
        <h1>{% trans %}Terminy urlopów użytkowników{% endtrans %}</h1>

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Osoba</th>
                <th>Poczatek</th>
                <th>Koniec</th>
                <th>Data zgłoszenia</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('termin_urlopu_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.osoba.imieNazwisko }}</td>
                    <td>{% if entity.start %}{{ entity.start|date('d.m.Y') }}{% endif %}</td>
                    <td>{% if entity.koniec %}{{ entity.koniec|date('d.m.Y') }}{% endif %}</td>
                    <td>{% if entity.dataZgloszenia %}{{ entity.dataZgloszenia|date('d.m.Y H:i') }}{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2"><a href="{{ path('termin_urlopu_new') }}" class="btn btn-success" role="button">{% trans %}Nowy{% endtrans %}</a></div>
        </div>
    </div>
{% endblock %}
