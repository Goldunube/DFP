<form method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded">

    <select name="{{ filterFieldName }}">
        {% for field, label in fields %}
            <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
        {% endfor %}
    </select>

    <input type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" />

    <button class="art-button pomaranczowy maly">Szukaj</button>
    <a href="{{ path(app.request.attributes.get('_route')) }}" class="art-button czerwony maly">Wyczyść</a>

</form>