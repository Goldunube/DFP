{% extends '@DFPEtapI/Backend/index.html.twig' %}

{% block content -%}
    <section>
        <h1>Edycja przypisania</h1>
        <div class="dlt-container" style="margin-bottom: 15px;">
            <h2>Dane filii</h2>
            <dl class="table-display">
                <dt>Nazwa klienta:</dt>
                <dd>{{ przypisanie.filia.klient.nazwaPelna }}</dd>
                <dt>Nazwa filii: </dt>
                <dd>{{ przypisanie.filia }}</dd>
                <dt>Adres:</dt>
                <dd>{{ przypisanie.filia.kodPocztowy|kodPocztowy }} {{ przypisanie.filia.miejscowosc }}; {{ przypisanie.filia.ulica }}</dd>
                <dt>Profil działalności:</dt>
                <dd>{{ przypisanie.filia.profileDzialalnosci|join(' | ') }}</dd>
            </dl>
        </div>

        {{ form_start(formularz) }}
            <table class="records_list">
                <thead>
                <tr>
                    <th rowspan="2">Użytkownik</th>
                    <th colspan="2">Przypisany</th>
                </tr>
                <tr>
                    <th>poczatek</th>
                    <th>koniec</th>
                </tr>
                </thead>

                <tbody>
                    <tr>
                        <th>{{ form_widget(formularz.uzytkownik) }}</th>
                        <td>{{ form_widget(formularz.poczatekPrzypisania) }}</td>
                        <td>{{ form_widget(formularz.koniecPrzypisania) }}</td>
                    </tr>
                </tbody>
            </table>
            <ul class="record_actions">
                <li>
                    <a href="{{ powrot_url }}" class="art-button">Powrót</a>
                </li>
                <li>
                    {{ form_row(formularz.submit, {'attr' : {'class':'art-button zielony'} }) }}
                </li>
            </ul>
        {{ form_end(formularz) }}
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    $('.dataczas').datetimepicker({dateFormat: "yy-mm-dd"});
{% endblock javascripts %}