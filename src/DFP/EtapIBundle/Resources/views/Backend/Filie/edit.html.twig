{% extends '@DFPEtapI/Backend/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
        <link href="{{ asset('css/karta_klienta.css') }}" rel="stylesheet"/>
{% endblock stylesheets %}

{% block javascript %}
    {{ parent() }}
    {% javascripts '@DFPEtapIBundle/Resources/public/js/*' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock javascript %}

{% block content -%}
    <section>
        <h1>Filia - edycja</h1>
        {{ form_start(formularz) }}
            {{ form_errors(formularz) }}

            {{ form_row(formularz.nazwaFilii) }}
            <ul class="filia-uzytkownicy" data-prototype="{{ form_widget(formularz.filieUzytkownicy.vars.prototype)|e }}">
                {% for filiaUzytkownik in formularz.filieUzytkownicy %}
                    <li>{{ form_widget(filiaUzytkownik) }}</li>
                {% endfor %}
            </ul>
            {#{{ form_row(formularz.submit) }}#}
            {#{{ form_row(formularz._token) }}#}
        {{ form_end(formularz) }}
        {#<section id="info-podstawowe">
            <h2>Informacje podstawowe:</h2>
            <table class="record_properties">
                <tbody>
                <tr>
                    <th>Filia klienta:</th>
                    <td><a href="">{{ filia.klient.nazwaPelna }}</a></td>
                </tr>
                <tr>
                    <th>Nazwa filii:</th>
                    <td>{{ filia.nazwaFilii }}</td>
                </tr>
                <tr>
                    <th>Adres filii:</th>
                    <td>{{ filia.kodPocztowy|kodPocztowy }} {{ filia.miejscowosc }}; ul. {{ filia.ulica }}</td>
                </tr>
                <tr>
                    <th>Przypisani agenci:</th>
                    <td>{{ filia.filieUzytkownicy|join(" | ") }}</td>
