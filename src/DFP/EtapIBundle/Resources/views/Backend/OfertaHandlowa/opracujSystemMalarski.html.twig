{% extends '@DFPEtapI/Backend/index.html.twig' %}

{% block javascript %}
    {{ parent() }}
{% endblock javascript %}

{% block content -%}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="two-columns">
        <section>

            {% for oferta_profil_system in form.ofertyProfileSystemy %}
                <table>
                    <thead>
                    <tr>
                        <th>Profil działalności</th>
                        <th>System Malarski</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td class="profil-dzialalnosci">{{ form_widget(oferta_profil_system.profilSystem.profilDzialalnosci) }}</td>
                        <td>
                            <div class="produkty" data-prototype="{{ form_widget(oferta_profil_system.profilSystem.systemMalarski.produkty.vars.prototype)|e }}"></div>
                            {% for system in oferta_profil_system.profilSystem.systemMalarski %}
                                <div>{{ form_widget(oferta_profil_system.profilSystem.systemMalarski) }}</div>
                            {% endfor %}
                        </td>
                    </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>{{ form_label(oferta_profil_system.uwagi, null, {'label_attr' : { 'style' : 'font-size: 13px;' } }) }}</th>
                            <td>{{ form_widget(oferta_profil_system.uwagi, {'attr' : { 'style':'width:96%;' } } ) }}</td>
                        </tr>
                    </tfoot>
                </table>
            {% endfor %}

        </section>

        <aside>
            <h4>Dane podstawowe:</h4>
            <dl class="table-display">
                <dt>Klient:</dt>
                <dd><a class="link" href="{{ path('backend_filia_show', { 'id': filia.id }) }}" target="_blank">{{ filia.klient.nazwaSkrocona }}</a></dd>
                <dt>Strona WWW:</dt>
                <dd>
                    {% if filia.klient.stronaWWW %}
                        <a class="link" href="{{ filia.klient.stronaWWW }}" target="_blank">{{ filia.klient.stronaWWW }}</a>
                    {% endif %}
                </dd>
                <dt>Profil:</dt>
                <dd>{{ filia.profileDzialalnosci|join(" | ") }}</dd>
                <dt>Poziom zużycia:</dt>
                <dd>{{ filia.zuzycieMaterialow|striptags }}</dd>
            </dl>

            <h4>Informacje dodatkowe:</h4>
            <dl class="table-display">
                <dt>Rodzaj podłoża:</dt>
                <dd>{{ filia.filieRodzajePowierzchni|join(' | ') }}</dd>
                <dt>Parametry utwardzania powłoki:</dt>
                <dd>{{ filia.filieProcesyUtwardzaniaPowloki|join(' | ') }}</dd>
                <dt>Metoda przygotowania powierzchni:</dt>
                <dd>{{ filia.filieProcesyPrzygotowaniaPowierzchni|join(' | ') }}</dd>
                <dt>Wymagania powłoki lakierowej:</dt>
                <dd>{{ filia.filieWymaganiaPowloki|join(' | ') }}</dd>
                <dt>Metoda aplikacji farby:</dt>
                <dd>{{ filia.filieProcesyAplikacji|join(' | ') }}</dd>
                <dt>Parametry produktu obecnie stosowanego:</dt>
                <dd>{{ filia.filieWymaganiaProduktu|join(' | ') }}</dd>
            </dl>
        </aside>
    </div>


    <ul class="record_actions">
        <li>
            <a href="{{ powrot_url }}" class="art-button">
                Powrót
            </a>
        </li>
{#        <li>
            <a href="#" class="art-button zielony">Otwórz zamówienie</a>
        </li>#}
        <li>
            {{ form_row(form.submit) }}
        </li>
    </ul>

    {{ form_end(form) }}

    {% javascripts '@DFPEtapIBundle/Resources/public/js/opracujSystemMalarski.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}