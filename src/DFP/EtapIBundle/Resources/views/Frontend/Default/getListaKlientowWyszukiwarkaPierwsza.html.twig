{% extends '@DFPEtapI/layout.html.twig' %}

{% form_theme form '@DFPEtapI/Form/bootstrap_form.html.twig' %}

{% block title %}Portal DFP - wyszukiwarka{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/main_2.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/layout_2.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet"/>
{% endblock stylesheets %}

{% block javascript %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&signed_in=true"></script>
{% endblock javascript %}

{% block content %}
    <style type="text/css">
        html, body, #map-canvas { height: 100%; margin: 0; padding: 0;}
    </style>

    <div class="page-header" style="margin-top: 0px;">
        <h1>Wyszukiwarka klientów <small>po miejscowości i promieniu</small></h1>
    </div>

    {#52.2329379,21.0611941#}

    <div class="well-sm">
        {{ form_start(form, {'attr' : { 'class' : 'form-inline' } }) }}
        <div class="form-group">
            <label for="{{ form.miejscowosc.vars.id }}">{{ form.miejscowosc.vars.label }}:</label>
            {{ form_widget(form.miejscowosc) }}
        </div>
        <label>Promień: </label>
        <div class="form-group">
            <label for="{{ form.promien.left_number.vars.id }}">{{ form.promien.left_number.vars.label }}</label>
            <div class="input-group">
                {{ form_widget(form.promien.left_number,{ 'attr' : { 'style' : 'width: 100px;' } }) }}
                <span class="input-group-addon">[km]</span>
            </div>
        </div>
        <div class="form-group">
            <label for="{{ form.promien.right_number.vars.id }}">{{ form.promien.right_number.vars.label }}</label>
            <div class="input-group">
                {{ form_widget(form.promien.right_number,{ 'attr' : { 'style' : 'width: 100px;' } }) }}
                <span class="input-group-addon">[km]</span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Szukaj</button>
        {{ form_end(form) }}
    </div>

    <hr>

    <div id="map-canvas" style="width: 100%; height: 300px;"></div>

    <hr>

    <section class="container-fluid">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Klient</th>
                    <th>Adres</th>
                    <th>Odległość</th>
                </tr>
            </thead>
            <tbody>
                {% for filia in filie %}
                    <tr>
                        <td>{{ filia.id }}</td>
                        <td>{{ filia.klient.nazwaSkrocona }}</td>
                        <td>{{ filia.ulica }}, {{ filia.kodPocztowy|kodPocztowy }} {{ filia.miejscowosc }}</td>
                        <td></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

    <script type="text/javascript">
        var $miejscowoscInput = $("#lista_klientow_promien_filter_miejscowosc");
        var obszar;

        function initialize() {
            var latLng = new google.maps.LatLng(52.2329379,21.0611941);
            var geocoder = new google.maps.Geocoder();
            var mapOptions = {
                center: latLng,
                zoom: 8
            };

            var address = "{{ form.miejscowosc.vars.value }}";
            var promien = {{ form.promien.right_number.vars.value }} * 1000;
            geocoder.geocode( { 'address': address}, function(results, status) {
                if (status == google.maps.GeocoderStatus.OK) {
                    map.setCenter(results[0].geometry.location);
                    var marker = new google.maps.Marker({
                        map: map,
                        position: results[0].geometry.location
                    });
                    var obszar = new google.maps.Circle({
                        strokeColor: '#FF0000',
                        strokeOpacity: 0.8,
                        strokeWeight: 2,
                        fillColor: '#FF0000',
                        fillOpacity: 0.35,
                        map: map,
                        center: results[0].geometry.location,
                        radius: promien
                    });
                } else {
                    alert('Geocode was not successful for the following reason: ' + status);
                }
            });

            map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

        }

        google.maps.event.addDomListener(window, 'load', initialize);


    </script>
{% endblock content %}