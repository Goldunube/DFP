{% extends '@DFPEtapI/Frontend/index.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/layout_1.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/custom-theme/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/karta_klienta.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/notatki_layout.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/qTip.css') }}" rel="stylesheet"/>
    <link href="http://cdn.jsdelivr.net/qtip2/2.2.0/jquery.qtip.min.css" rel="stylesheet"/>
{% endblock stylesheets %}

{% block javascript %}
    <script type="text/javascript" src="{{ asset('js/jquery-1.10.2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/jquery-ui-1.10.3.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/timepicker.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/tinymce/tinymce.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/tinymce/jquery.tinymce.min.js') }}"></script>
    <script type="text/javascript" src="http://cdn.jsdelivr.net/qtip2/2.2.0/jquery.qtip.min.js"></script>
{% endblock javascript %}

{% set stanowiska = ["Dyrektor DFP", "Administrator Portalu DFP", "Koordynatod DFP", "Kierownik Produktu"] %}

{% block content -%}
    <section>
        <h1>Filia <sup>(ID: {{ filia.id }})</sup></h1>
        <div class="status-container">
            {% if filia.aktywna == 1 %}
                <span class="aktywny">Aktywna</span>
            {% else %}
                <span class="nieaktywny">Nieaktywna</span>
            {% endif %}
        </div>
        <div>
            <span>Data założenia karty klienta: {{ filia.klient.dataZalozenia|date('d-m-Y H:i') }}</span>
        </div>
        <section id="info-podstawowe">
            <h2>Informacje podstawowe:</h2>
            <table class="record_properties">
                <tbody>
                <tr>
                    <th>Filia klienta:</th>
                    <td><a class="link" href="{{ path('url_pokaz_karte_klienta', {'id': filia.klient.id} ) }}">{{ filia.klient.nazwaPelna }}</a></td>
                </tr>
                <tr>
                    <th>Adres strony WWW:</th>
                    <td>
                        {% if filia.klient.stronaWWW %}
                            <a class="link" href="{{ filia.klient.stronaWWW }}" target="_blank">{{ filia.klient.stronaWWW }}</a>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Nazwa filii:</th>
                    <td>{{ filia.nazwaFilii }}</td>
                </tr>
                <tr>
                    <th>Adres filii:</th>
                    <td>{{ filia.kodPocztowy|kodPocztowy }} {{ filia.miejscowosc }}; ul. {{ filia.ulica }}</td>
                </tr>
                <tr>
                    <th>Osoby kontaktowe:</th>
                    <td>{{ filia.filiePracownicy|join(" | ")|raw }}</td>
                </tr>
                <tr>
                    <th>Profil działalności:</th>
                    <td>{{ filia.profileDzialalnosci|join(" | ") }}</td>
                </tr>
                <tr>
                    <th>Stosowany system malarski:</th>
                    <td>{{ filia.matlakDotychczas|raw }}</td>
                </tr>
                <tr>
                    <th>Wielkość zużycia:</th>
                    <td>{{ filia.zuzycieMaterialow|raw }}</td>
                </tr>
                <tr>
                    <th>Kolorystyka:</th>
                    <td>{{ filia.kolorystyka|raw }}</td>
                </tr>
                <tr>
                    <th>Materiały uzupełniające:</th>
                    <td>{{ filia.filieMaterialyUzupelniajace|join(" | ")|raw }}</td>
                </tr>
                <tr>
                    <th>Adnotajce:</th>
                    <td>{{ filia.adnotacja|raw }}</td>
                </tr>
                </tbody>
            </table>
        </section>

        <section id="info-dodatkowe" class="two-columns">
            <h2>Informacje dodatkowe:</h2>
            <div class="lewa">
                <fieldset>
                    <legend>Rodzaj podłoża</legend>
                    {% if filia.filieRodzajePowierzchni|length > 0 %}
                        <dl class="table-display">
                            {% for rodzajPowierzchniFilii in filia.filieRodzajePowierzchni %}
                                <dt>{{ rodzajPowierzchniFilii.rodzajPowierzchni.nazwa }}</dt>
                                <dd>{{ rodzajPowierzchniFilii.info }}</dd>
                            {% endfor %}
                        </dl>
                    {% endif %}
                </fieldset>
                <fieldset>
                    <legend>Metoda przygotowania powierzchni</legend>
                    {% if filia.filieProcesyPrzygotowaniaPowierzchni|length > 0 %}
                        <dl class="table-display">
                            {% for procesFilii in filia.filieProcesyPrzygotowaniaPowierzchni %}
                                <dt>{{ procesFilii.procesPrzygotowaniaPowierzchni.nazwaProcesu }}</dt>
                                <dd>{{ procesFilii.info }}</dd>
                            {% endfor %}
                        </dl>
                    {% endif %}
                </fieldset>
                <fieldset>
                    <legend>Metoda aplikacji farby</legend>
                    {% if filia.filieProcesyAplikacji|length > 0 %}
                        <dl class="table-display">
                            {% for procesFilii in filia.filieProcesyAplikacji %}
                                <dt>{{ procesFilii.procesAplikacji.nazwaProcesu }}</dt>
                                <dd>{{ procesFilii.info }}</dd>
                            {% endfor %}
                        </dl>
                    {% endif %}
                </fieldset>
            </div>
            <div class="prawa">
                <fieldset>
                    <legend>Parametry utwardzania powłoki</legend>
                    {% if filia.filieProcesyUtwardzaniaPowloki|length > 0 %}
                        <dl class="table-display">
                            {% for procesFilii in filia.filieProcesyUtwardzaniaPowloki %}
                                <dt>{{ procesFilii.procesUtwardzaniaPowloki.nazwaProcesu }}</dt>
                                <dd>
                                    <dl>
                                        <dt>Temp. min:</dt>
                                        <dd>{{ procesFilii.tempMin }}&#176;C</dd>
                                        <dt>Temp max:</dt>
                                        <dd>{{ procesFilii.tempMax }}&#176;C</dd>
                                        <dt>Czas:</dt>
                                        <dd>{{ procesFilii.czasSchniecia }} min</dd>
                                    </dl>
                                </dd>
                            {% endfor %}
                        </dl>
                    {% endif %}
                </fieldset>
                <fieldset>
                    <legend>Wymagania powłoki lakierowej</legend>
                    {% if filia.filieWymaganiaPowloki|length > 0 %}
                        <dl class="table-display">
                            {% for wymaganiaPowloki in filia.filieWymaganiaPowloki %}
                                <dt>{{ wymaganiaPowloki.wymaganiaPowloki.nazwaParametru }}</dt>
                                <dd>{{ wymaganiaPowloki.info }}</dd>
                            {% endfor %}
                        </dl>
                    {% endif %}
                </fieldset>
                <fieldset>
                    <legend>Parametry produktu obecnie stosowanego</legend>
                    {% if filia.filieWymaganiaProduktu|length > 0 %}
                        <dl class="table-display">
                            {% for filiaWymaganiaProduktu in filia.filieWymaganiaProduktu %}
                                <dt>{{ filiaWymaganiaProduktu.wymaganiaProduktu.nazwaParametru }}</dt>
                                <dd>{{ filiaWymaganiaProduktu.info }}</dd>
                            {% endfor %}
                        </dl>
                    {% endif %}
                </fieldset>
            </div>
        </section>

        <section id="notatki">
            <h2>Ustalenia / Notatki:</h2>
            <div class="container">
                {% for notatka in filia.filieNotatki %}
                    {% set wyrozniona = notatka.uzytkownik.profilUzytkownika.stanowisko in stanowiska ? "style=color:red;" : "" %}
                    <div class="notatka">
                        <div class="naglowek">
                            {% if notatka.uzytkownik == app.user %}
                                {% if date(notatka.koniecEdycji) > date('now') %}
                                    <span class="kategorie-notatek kategoria-{{ notatka.rodzaj }}">{{ attribute(notatka_kategorie,notatka.rodzaj) }}</span>
                                    <span {{ wyrozniona }}>{{ notatka.uzytkownik }} || {{ notatka.dataSporzadzenia|date('Y-m-d H:i:s') }}</span> <ul class="record_actions"><li><a href="{{ path('frontend_filia_notatka_edytuj', {'id': notatka.id } ) }}" class="art-button maly pomaranczowy">Edytuj</a></li> <li><a href="{{ path('frontend_filia_notatka_usun', {'id': notatka.id }) }}" class="art-button maly czerwony">Usuń</a></li></ul>
                                {% else %}
                                    <span class="kategorie-notatek kategoria-{{ notatka.rodzaj }}">{{ attribute(notatka_kategorie,notatka.rodzaj) }}</span>
                                    <span {{ wyrozniona }}>{{ notatka.uzytkownik }} || {{ notatka.dataSporzadzenia|date('Y-m-d H:i:s') }}</span> <ul class="record_actions"><li><a href="{{ path('frontend_filia_notatka_usun', {'id': notatka.id }) }}" class="art-button maly czerwony">Usuń</a> </li></ul>
                                {% endif %}
                            {% else %}
                                <span class="kategorie-notatek kategoria-{{ notatka.rodzaj }}">{{ attribute(notatka_kategorie,notatka.rodzaj) }}</span>
                                <span {{ wyrozniona }}>{{ notatka.uzytkownik }} - {{ notatka.uzytkownik.profilUzytkownika.stanowisko }} || {{ notatka.dataSporzadzenia|date('Y-m-d H:i:s') }}</span>
                            {% endif %}
                        </div>

                        <div class="tresc">
                            {% if notatka.status == 0 %}
                                <s>{{ notatka.tresc|raw }}</s>
                            {% else %}
                                {{ notatka.tresc|raw }}
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </section>

    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-messages flash-{{ type }}">
                <p>{{ message }}</p>
            </div>
        {% endfor %}
    {% endfor %}

    <ul class="record_actions">
        <li>
            <a href="{{ path('url_lista_klientow') }}" class="art-button">
                Powrót do listy
            </a>
        </li>
        <li>
            <a href="{{ path('frontend_filia_edytuj', { 'id': filia.id }) }}" class="art-button">
                Edytuj
            </a>
        </li>
        <li>
            <a href="{{ path('frontend_filia_notatka_new', {'id': filia.id}) }}" class="art-button">
                Dodaj notatkę
            </a>
        </li>
        <li style="float: right;">
            <a id="zamow-oferte" href="{{ path('frontend_filia_ajax_zamowienie_oferty', {'id': filia.id}) }}" class="art-button">Zamów ofertę</a>
        </li>
        {#<li>
            <a href="{{ path('frontend_filia_notatka_new', {'id': filia.id}) }}" class="art-button">
                Lista pracowników
            </a>
        </li>#}
    </ul>
{% endblock %}

{% block modal_windows %}
    <div>
        <p>Przekaż Technikowi / Koordynatorowi istotne informacje dotyczące zamawianej <strong>oferty handlowej</strong></p>
        <form id="zamow-oferte-form" action="{{ path('frontend_filia_zamowienie_oferty', {'id': filia.id}) }}" method="post">
            <textarea name="info" style="width: 90%; height: 125px;"></textarea>
        </form>
    </div>
{% endblock modal_windows %}

{% block javascripts %}
    {{ parent() }}
    $('#main [title]').qtip({hide: { fixed: true, delay: 500 } });
    $('#modal-windows').dialog({
        title: "Zamówienie oferty Handlowej",
        autoOpen: false,
        height: 300,
        width: 350,
        modal: true,
        draggable: true,
        resizable: true,
        buttons: {
            "Wyślij": function()
            {
                $('#zamow-oferte-form').submit();
                $(this).dialog("close");
            },
            Anuluj: function()
            {
                $(this).dialog("close");
            }
        },
    })
    $('#zamow-oferte')
    .click(function(event) {
        event.preventDefault();
        $('#modal-windows').dialog("open");
    })
    $('.flash-messages').delay(5000).fadeOut(500);
{% endblock javascripts %}