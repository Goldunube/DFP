        <section id="notatki">
            <h2>Ustalenia / Notatki:</h2>
            <div class="container">
                {% for notatka in filia.filieNotatki %}
                    {% set wyrozniona = notatka.uzytkownik.profilUzytkownika.stanowisko in stanowiska ? "style=color:red;" : "" %}
                    <div class="notatka">
                        <div class="naglowek">
                            {% if notatka.uzytkownik == app.user %}
                                {% if date(notatka.koniecEdycji) > date('now') %}
                                    <span class="kategorie-notatek kategoria-{{ notatka.rodzaj }}">{{ attribute(notatka_kategorie,notatka.rodzaj) }}</span>
                                    <span {{ wyrozniona }}>{{ notatka.uzytkownik }} || {{ notatka.dataSporzadzenia|date('Y-m-d H:i:s') }}</span> <ul class="record_actions"><li><a href="{{ path('frontend_filia_notatka_edytuj', {'id': notatka.id } ) }}" class="art-button maly pomaranczowy">Edytuj</a></li> <li><a href="{{ path('frontend_filia_notatka_usun', {'id': notatka.id }) }}" class="art-button maly czerwony">Usuń</a></li></ul>
