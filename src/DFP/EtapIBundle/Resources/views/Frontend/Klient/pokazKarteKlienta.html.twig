{% extends '@DFPEtapI/Frontend/index.html.twig' %}

{% block content -%}
    <section>
        <h1>Karta klienta: {{ klient.nazwaSkrocona }}</h1>

        <table class="karta-klienta">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ klient.id }}</td>
            </tr>
            <tr>
                <th>Pełna nazwa klienta</th>
                <td>{{ klient.nazwaPelna }}</td>
            </tr>
            <tr>
                <th>Skrócona nazwa klienta</th>
                <td>{{ klient.nazwaSkrocona }}</td>
            </tr>
            <tr>
                <th>Adres strony WWW:</th>
                <td>
                    {% if klient.stronaWWW %}
                        <a class="link" href="{{ klient.stronaWWW }}" target="_blank">{{ klient.stronaWWW }}</a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Profil działalności</th>
                <td>
                    {% for filia in klient.filie %}
                        {{ filia.profileDzialalnosci|join(" | ") }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Data założenia karty</th>
                <td>{{ klient.dataZalozenia|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>NIP</th>
                <td>{{ klient.nip|nip }}</td>
            </tr>
            <tr>
                <th>Kod MAX</th>
                <td>{{ klient.kodMax }}</td>
            </tr>
            <tr>
                <th>Kanał dystrybucji</th>
                <td>{{ klient.kanalDystrybucji }}</td>
            </tr>
            <tr>
                <th>Aktywny</th>
                <td>{{ klient.aktywny }}</td>
            </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a href="javascript: history.back();" class="art-button">
                    Powrót
                </a>
            </li>
            {#<li>
                <a href="#" class="art-button">
                    Edytuj
                </a>
            </li>#}
        </ul>
    </section>
{% endblock %}
